@model List<EstoqueModel>
@{
    ViewData["Title"] = "Estoque";
}

<div class="text-center">
    <h2 class="mb-3">Lista de Estoque</h2>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Nome</th>
                <th>Quantidade Total</th>
                <th>Alugados</th>
                <th>Dispon√≠veis</th>
                <th>Valor Unidade</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.Nome
                    </td>
                    <td>
                        @item.QuantidadeTotal
                    </td>
                    <td>
                        @item.Alugados
                    </td>
                    <td>
                        @item.Disponiveis
                    </td>
                    <td>
                        R$ @item.ValorUnid
                    </td>
                    <td>
                        <button type="button" class="btn btn-primary">Editar</button>
                    </td>
                </tr>
            }
            <div><button type="button">Adicionar Produto</button></div>
        </tbody>

    </table>
</div>