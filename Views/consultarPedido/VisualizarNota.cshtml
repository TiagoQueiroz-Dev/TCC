@model EstoquePedidoNotaModel
@{
    ViewData["Title"] = "Visualizar";
}

<div class="text-center ">
    <div class="d-flex justify-content-evenly">
        <div class="mb-3 w-100 me-3">
            <label for="nome" class="form-label">Nome:</label>
            <input type="text" class="form-control" value="@Model.NovaNota.Nome" id="nome" readonly>
        </div>
        <div class="w-100 me-3">
            <label for="CNPJ_CPF" class="form-label">CNPJ / CPF:</label>
            <input type="number" class="form-control" value="@Model.NovaNota.CPF_CNPJ" id="CNPJ_CPF" readonly>
        </div>
    

    <div class="w-50">
        <label for="Telefone" class="form-label">Telefone:</label>
        <input type="number" class="form-control" value="@Model.NovaNota.Telefone" id="Telefone" readonly>
    </div>
    </div>
<div class="d-flex justify-content-evenly ">
    <div class="w-100 me-3">
        <label for="Data_aluguel" class="form-label">Data da nota:</label>
        <input type="date" class="form-control" value="@Model.NovaNota.DataEmissao.ToString("yyyy-MM-dd")" id="Data_aluguel" readonly>
    </div>
    <div class="w-100 mb-3">
        <label for="Data_recolhimento" class="form-label">Data de recolhimento:</label>
        
        <input type="date" class="form-control" value="@Model.NovaNota.DataRecolhimento.ToString("yyyy-MM-dd")" id="Data_recolhimento"
            readonly>
    </div>
</div>

<div class="mb-3 text-center d-flex flex-column">
    <label for="produtos" class="form-label">Produtos Solicitados:</label>
    <div class=" d-flex justify-content-evenly ">
        @for (int i = 0; i < @Model.Pedidos.Count; i++)
        {
            @for (int j = 0; j < @Model.Estoque.Count; j++)
            {
                @if (@Model.Pedidos[i].IdProduto == @Model.Estoque[j].Id)
                {
                    <div class="">
                        <label>@Model.Estoque[j].Nome</label>
                        <input type="number" class="form-control text-center" value="@Model.Pedidos[i].Quantidade" readonly>
                    </div>
                }
            }
        }
    </div>
</div>
<div class="d-flex justify-content-evenly">
    <div class="w-100 me-3">
        <label for="valor_desconto" class="form-label">Desconto:</label>
        <input type="text" class="form-control" value="@Model.NovaNota.ValorDesconto" id="valor_desconto" readonly>
    </div>
    <div class="w-100">
        <label for="valor_total" class="form-label">Valor Total:</label>
        <input type="text" class="form-control" value="@Model.NovaNota.ValorTotal" id="valor_total" readonly>
    </div>
</div>
<div class="d-flex justify-content-evenly">
    <div class="w-50 me-3">
        <label for="cep" class="form-label">CEP:</label>
        <input type="number" class="form-control " value="@Model.NovaNota.Cep" id="cep" readonly>
    </div>
    <div class="w-50 me-3">
        <label for="bairro" class="form-label">Bairro:</label>
        <input type="text" class="form-control" value="@Model.NovaNota.Bairro" id="bairro" readonly>
    </div>
    <div class="w-100 me-3">
        <label for="rua" class="form-label">Rua / Logadouro:</label>
        <input type="text" class="form-control" value="@Model.NovaNota.Rua" id="rua" readonly>
    </div>
    <div class="w-10 me-3">
        <label for="numCasa" class="form-label">Número: </label>
        <input type="number" class="form-control" value="@Model.NovaNota.Numero" id="numCasa" readonly>
    </div>
    <div class="w-50">
        <label for="complemento" class="form-label">Complemento: </label>
        <input type="text" class="form-control" value="@Model.NovaNota.Complemento" id="complemento" readonly>
    </div>
</div>
<div class="d-flex justify-content-evenly">
    <div class="w-100 me-3">
        <label for="taxaEntrega" class="form-label">Taxa de Entrega:</label>
        <input type="text" class="form-control" value="@Model.NovaNota.TaxaEntrega" id="taxaEntrega" readonly>
    </div>
    <div class="w-100">
        <label for="pagPrevio" class="form-label">Pagamento Prévio: </label>
        <input type="text" class="form-control" value="@Model.NovaNota.ValorPag" id="pagPrevio" readonly>
    </div>
</div>
</div>