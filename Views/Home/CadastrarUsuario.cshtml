            <div class="mb-3">
                <label for="senha" class="form-label fs-5 Roboto">Senha:</label>
                <input type="password" class="form-control fs-5" id="senha" name="senha">
            </div>
            <div class="mb-3">
                <label for="confirmarSenha" class="form-label fs-5 Roboto">Confirmar senha:</label>
                <input type="password" class="form-control fs-5" id="confirmarSenha" name="confirmarSenha">
            </div>
            <div class="botoes d-flex justify-content-between">
                <a asp-area="" asp-controller="Home" asp-action="Index" class="btn btn-danger">Cancelar</a>
                <button type="submit" class="btn btn-success">Cadastrar</button>
            </div>
        </div>
    </form>
</div>