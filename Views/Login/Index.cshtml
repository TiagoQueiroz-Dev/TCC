@model UsuarioModel


<h3>Login</h3>
<div class="row">
    <div class="col-md-12">
        <form asp-action="Login" asp-controller="Login" method="post">
            <div class="form-group">
                <label asp-for="@Model.Email"></label>
                <input asp-for="@Model.Email" class="form-control">
            </div>
            <div class="form-group">
                <label asp-for="@Model.Senha"></label>
                <input asp-for="@Model.Senha" class="form-control">
            </div>
            <div class="form-group">
                <label asp-for="@Model.verificar">
                    <input class="form-check-input" type="checkbox" asp-for="@Model.verificar">
                    @Html.DisplayNameFor(a => a.verificar);
                </label>
                
            </div>
            <button type="submit" class="btn btn-primary mt-3">Enviar</button>
            <button type="" onclick="window.location.assign('Login/Registro')" class="btn btn-primary mt-3">Fazer cadastro</button>
        </form>
    </div>
</div>