@model List<NotaModel>
@{
    ViewData["Title"] = "Consulta";
}

<head>
    <style>
        input,
        textarea,
        select {
            outline: 0;
        }
    </style>
</head>

<div class="Card">
    <div class="text-center d-flex justify-content-center w-100 row">
    <p class="Title">Consultar nota</p>
    <form method="post" asp-action="ConsultaNota" asp-controller="ConsultarPedido">
        <div class="d-flex justify-content-center align-items-center">
                <div class="d-flex gap-4">
                    <div class="input-group">
                        <input name="busca" type="search"
                        id="pesquisa" class="form-control rounded" placeholder="Pesquisar" aria-label="Search" aria-describedby="search-addon" />
                        <button type="submit" class="btn btn-outline-dark" data-mdb-ripple-init>search</button>
                    </div>
                <select id="filtros" class="rounded-pill ps-1 Roboto" name="opc">
                    <option value="" disabled selected>Selecione Filtro</option>
                    <option value="CPF/CNPJ">CPF/CNPJ</option>
                    <option value="NNota">Nº Nota</option>
                    <option value="Cliente">NOME CLIENTE</option>
                    <option value="Tel">TELEFONE</option>
                    <option value="Periodo">PERÍODO</option>
                    <option value="CEP">CEP</option>
                </select>
            </div>
    </form>
</div>
</div>

</div>