@model EstoquePedidoNotaModel
@{
    ViewData["Title"] = "Consulta";
}

<head>
    <style>
        input,
        textarea,
        select {
            outline: 0;
        }
    </style>
</head>

<div class="d-flex flex-column w-100">
    <div class="Card">
    <div class="text-center d-flex justify-content-center w-100 row">
    <p class="Title">Consultar nota</p>
    <form method="post" asp-action="ConsultaNota" asp-controller="ConsultarPedido">
        <div class="d-flex justify-content-center align-items-center">
                <div class="d-flex gap-4">
                    <div class="input-group">
                        <input name="busca" type="search"
                        id="pesquisa" class="form-control rounded" placeholder="Pesquisar" aria-label="Search" aria-describedby="search-addon" />
                        <button type="submit" class="btn btn-outline-dark" data-mdb-ripple-init>search</button>
                    </div>
                <select id="filtros" class="rounded-pill ps-1 Roboto" name="opc">
                    <option value="" disabled selected>Selecione Filtro</option>
                    <option value="CPF/CNPJ">CPF/CNPJ</option>
                    <option value="NNota">Nº Nota</option>
                    <option value="Cliente">NOME CLIENTE</option>
                    <option value="Tel">TELEFONE</option>
                    <option value="Periodo">PERÍODO</option>
                    <option value="CEP">CEP</option>
                </select>
            </div>
    </form>
</div>
</div>

</div>
@if(Model.ListaNotas.NotasEncontradas.Any()){
      <table class="table">
            <thead>
                <tr>
                    <th scope="col" class="text-center">Nº Nota</th>
                    <th scope="col" class="text-center">CPF/CNPJ</th>
                    <th scope="col" class="text-center">Cliente</th>
                    <th scope="col" class="text-center"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in @Model.ListaNotas.NotasEncontradas)
                {
                    <tr>
                        <th class="text-center" scope="row">@item.Id</th>
                        <td class="text-center">@item.CPF_CNPJ</td>
                        <td class="text-center">@item.Nome</td>
                        <td class="d-flex justify-content-center w-100"><a role="button" class="btn btn-primary" asp-action="VisualizarNota" asp-controller="ConsultarPedido" asp-route-id="@item.Id">Visualizar</a></td>
                    </tr>
                    
                }
            </tbody>
        </table>
    }
    else{
        <h1 class="text-center">Nota não encontrada</h1>
    }